<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_partner_payroll">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="line_number" t-value="0"/>
                    <div class="page">
                        <xpath expr="//main/div[@class='header']" position="replace">
