                        <div class="footer">
                            <table style="width: 100%;">
                                <col width="50"/>
                                <col width="50"/>
                                <tr>
                                    <td class="text-left" style="vertical-align: bottom;">
                                        www.t-s.bo
                                    </td>
                                    <td class="text-right" style="vertical-align: bottom;">
                                        <div>
                                            Page
                                            <span class="page"/>
                                            /
                                            <span class="topage"/>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </t>
            </t>

        </template>
    </data>
</odoo>
