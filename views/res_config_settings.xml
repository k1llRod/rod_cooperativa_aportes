<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_cooperativa_aportes" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.cooperativa.aportes</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="95"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Aportes" string="Cooperativa de ahorro y credito de vinculo laboral" >
                    <h2>Valores para tabla de aportes</h2>
                    <div class="row mt16 o_settings_container" name="taxes_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box"
                            id="default_sales_tax_setting"
                            title="Valores para parametrizar aportes.">
                            <div class="o_setting_right_pane">
                                <div class="content-group mt16">
                                    <label string="Taza de regulación" for="regulation_cup"/>
                                    <div class="text-muted">
                                        Establecer taza de regulación.
                                    </div>
                                    <div>
                                        <field name="regulation_cup" colspan="4" nolabel="1"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <div>
                                    <div class="content-group mt16">
                                        <label string="Certificado de aporte obligatorio"
                                               for="mandatory_contribution_certificate"/>
                                        <div class="text-muted">
                                            Establecer Certificado de aporte obligatorio.
                                        </div>
                                        <div>
                                            <field name="mandatory_contribution_certificate" colspan="4" nolabel="1"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <div>
                                    <div class="content-group mt16">
                                        <label string="Ingresos diversos" for="miscellaneous_income"/>
                                        <div class="text-muted">
                                            Establecer divesos ingresos.
                                        </div>
                                        <div>
                                            <field name="miscellaneous_income" colspan="4" nolabel="1"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <div>
                                    <div class="content-group mt16">
                                        <label string="Meses cobro de certificados" for="month_ids"/>
                                        <div class="text-muted">

                                        </div>
                                        <div>
                                            <field name="month_ids" widget="many2many_tags"/>
                                        </div>
<!--                                        <field name="month_ids" colspan="4" nolabel="1"/>-->
                                    </div>
                                </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <div>
                                    <div class="content-group mt16">
                                        <label string="Capital base minimo" for="capital_minimum"/>
                                        <div class="text-muted">
                                        </div>
                                        <div>
                                            <field name="capital_minimum" colspan="4" nolabel="1"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <div>
                                    <div class="content-group mt16">
                                         <label string="Aporte situacion pasiva" for="contribution_passive"/>
                                        <div>
                                            <field name="contribution_passive" colspan="4" nolabel="1"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box"
                            id="default_sales_tax_setting"
                            title="Valores para parametrizar aportes.">
                            <div class="o_setting_right_pane">
                                <div class="content-group mt16">
                                    <label string="Ingreso" for="account_income_id"/>
                                    <div class="text-muted">
                                        Cuenta de ingresos de aportes.
                                    </div>
                                    <div>
                                        <field name="account_income_id" colspan="4" nolabel="1"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <div>
                                    <div class="content-group mt16">
                                        <label string="Cuenta de inscripcion AFCOOP"
                                               for="account_inscription_id"/>
                                        <div class="text-muted">
                                            Establecer cuenta contable para inscripción.
                                        </div>
                                        <div>
                                            <field name="account_inscription_id" colspan="4" nolabel="1"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <div>
                                    <div class="content-group mt16">
                                        <label string="Ingresos diversos" for="account_regulation_cup_id"/>
                                        <div class="text-muted">
                                            Establecer cuenta contable para tasa de regulacion AFCOOP.
                                        </div>
                                        <div>
                                            <field name="account_regulation_cup_id" colspan="4" nolabel="1"/>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="o_setting_right_pane">
                                <div>
                                    <div class="content-group mt16">
                                        <label string="Cuenta de certificado obligatorio" for="account_mandatory_contribution_id"/>
                                        <div class="text-muted">
                                            Establecer cuenta contable para aportes obligatorios AFCOOP.
                                        </div>
                                        <div>
                                            <field name="account_mandatory_contribution_id" colspan="4" nolabel="1"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <div>
                                    <div class="content-group mt16">
                                         <label string="Cuenta de certificado voluntario" for="account_voluntary_contribution_id"/>
                                        <div class="text-muted">
                                            Establecer cuenta contable para aportes voluntarios AFCOOP.
                                        </div>
                                        <div>
                                            <field name="account_voluntary_contribution_id" colspan="4" nolabel="1"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="rod_cooperativa_aportes.action_cooperativa_aportes_configuration" model="ir.actions.act_window">
        <field name="name">Ajustes de la cooperativa aportes</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>


</odoo>
